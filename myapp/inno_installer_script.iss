#define MyAppName "Pikanto"
#define MyAppVersion "1.0"
#define MyAppPublisher "Zinando Concepts"
#define MyAppExeName "Pikanto.exe"

[Setup]
AppName={#MyAppName}
AppVersion={#MyAppVersion}
AppPublisher={#MyAppPublisher}
DefaultDirName={commonappdata}\{#MyAppName}
OutputDir=Output
OutputBaseFilename={#MyAppName}
Compression=lzma2/max
SolidCompression=yes

[Files]
Source: "build\pikanto\{#MyAppExeName}"; DestDir: "{app}"
Source: "build\pikanto\*"; DestDir: "{app}"; Flags: recursesubdirs; Excludes: "Pikanto.exe"

[Icons]
Name: "{commondesktop}\{#MyAppName}"; Filename: "{app}\Pikanto.exe"; IconFilename: "{app}\assets\icons\app_icon.ico"

